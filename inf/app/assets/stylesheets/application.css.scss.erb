@mixin transition($duration: 2s) {
	-webkit-transition: all #{$duration} ease-in-out;
	-moz-transition: all #{$duration} ease-in-out;
	-o-transition: all #{$duration} ease-in-out;
	transition: all #{$duration} ease-in-out;
}

