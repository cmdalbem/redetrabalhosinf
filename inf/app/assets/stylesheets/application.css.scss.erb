@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";


/* Import font from Google Fonts API */
@import url("http://fonts.googleapis.com/css?family=Inder&subset=latin,latin-ext");

@font-face {
    font-family: 'OpenSansLight';
    src: url(' <%= asset_path('OpenSans-Light-webfont.woff') %>') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'OpenSansRegular';
    src: url(' <%= asset_path('OpenSans-Regular-webfont.woff') %>') format('woff');
    font-weight: normal;
    font-style: normal;
}


/* Important globals */
$page_width: 70%;


html {
  width: $page_width; 
  margin: auto;
  background-image: url('patterns/grey.png');
}

body {
  font-family: 'Inder', 'OpenSansRegular', sans-serif;
  font-size: 14px;
  line-height: 20px;

  background: none;
}

#wrap {
  padding-top: 60px;

  /*background-image: linear-gradient(to bottom, rgba(255,255,255, 0.100), rgba(230,230,230, 1));*/

  background-image: linear-gradient(top, rgb(255,255,255), rgb(230,230,230));
  background-image: -o-linear-gradient(top, rgb(255,255,255), rgb(230,230,230));
  background-image: -moz-linear-gradient(top, rgb(255,255,255), rgb(230,230,230));
  background-image: -webkit-linear-gradient(top, rgb(255,255,255), rgb(230,230,230));
  background-image: -ms-linear-gradient(top, rgb(255,255,255), rgb(230,230,230));

  -moz-box-shadow: 0 0 30px rgba(0,0,0,0.2);
  -webkit-box-shadow: 0 0 30px rgba(0,0,0,0.2);
  box-shadow: 0 0 30px rgba(0,0,0,0.2);
}

.container {
  width: 90%;

  article {
    $pad: 30px;
    padding-left: $pad;
    padding-right: $pad;
  }

  article.about p:first-letter {
    font-size: 22px;
  }
  article.about {
    p:first-letter {
      margin-left: 20px;
      font-weight: bold;
    }
  }
}

.block {
  background-color: rgba(0,0,0,0.03);

  padding: 5px 15px 5px 15px;

  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;

  img {
    height: 200px;
    width: auto;
  }
}

.icon-white,
.nav > .active > a > [class^="icon-"],
.nav > .active > a > [class*=" icon-"],
.dropdown-menu > li > a:hover > [class^="icon-"],
.dropdown-menu > li > a:hover > [class*=" icon-"],
.dropdown-menu > .active > a > [class^="icon-"],
.dropdown-menu > .active > a > [class*=" icon-"] {
    background-image: none;
}


.navbar {
  $myred: rgb(200,100,100);
  border-bottom: 2px solid $myred;
  
  img {
    width: 18px;
    height: auto;
  }

  a.brand {
    padding: 5px;

    img {
      width: 100%;
      height: 100%;
    }
  }


  li.nav_link {
    a {
      border-bottom: 3px solid transparent;

      -webkit-transition: all .2s ease-in-out;
      -moz-transition: all .2s ease-in-out;
      -o-transition: all .2s ease-in-out;
      transition: all .2s ease-in-out;
    }

    a:hover {
      border-bottom: 3px solid $myred;
    }    
  }
}

.hero-unit {
  /*background-color: rgba(255,150,0,0.1);*/
}

footer {
  /*font-size: 12px;*/
  border-top: 1px solid rgba(0,0,0,0.1);
  background-color: rgba(0,0,0,0.05);
  padding-top: 20px;

  background-image: url('patterns/grid.png');

  header {
    font-weight: bold;
    text-shadow: 1px 1px 1px #fff;
    font-size: 16px;

    a, a:hover{
      text-decoration: none;
    }
  }

  img {
    /*opacity: 0.7;*/
  }

  ul {
    list-style-type: none;
  }
}

form {
  width: auto;
  position: center;
  background-color: rgba(0,0,0,0.03);

  padding: 20px 50px 20px 20px;
  margin-left: 50px;
  margin-top: 20px;

  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;

  select {
    width: auto;
  }

  textarea {
    width: 90%;
    max-width: 100%;
    height: 200px;
  }

  label {
    font-weight: bold;
  }
}

form.form-search {
  padding: 0 0 0 0;
  background-color: transparent;
  margin: 0 0 0 0;
}

.content {
  padding-bottom: 50px;
}

#search.search-query {
  height: auto;
}

p#authors {
  padding-left: 100px;
  float: none;
}

a#logo {
  float: left;
  padding-top: 9px;
  font-size: 1.7em;
  letter-spacing: -2px;
  font-weight: bold;
  line-height: 1;
  color: rgba(0,0,0,0.6);
  text-shadow: 1px 1px 1px #fff;

  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;  
}

a#logo:hover {
  text-decoration: none;
  color: rgba(0,0,0,1);
  background: none;
}

.current {
  padding-right: 15px;
  background-repeat: no-repeat;
  background-position: right center;
}
.current.asc {
  background-image: url(/assets/glyphicons-caret-down.png);
}
.current.desc {
  background-image: url(/assets/glyphicons-caret-up.png);
}


label {
  display: inline
}

.nopull {
  float: none;
}

/* SPECIAL CODE FOR STICK FOOT(ER) */
  $foot_height: 200px;
  * {margin:0;padding:0;}
  html, body {height: 100%;}
  #wrap {min-height: 100%;}
  #main {
    overflow:auto;
    padding-bottom: $foot_height;}
  footer {
    position: relative;
    margin-top: -$foot_height;
    height: $foot_height;
    clear:both;}
  /*Opera Fix*/
  body:before {/* thanks to Maleika (Kohoutec)*/
    content:"";
    height:100%;
    float:left;
    width:0;
    margin-top:-32767px;/* thank you Erik J - negate effect of float*/
  }