@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";


/* Important globals */
$minWidth: 800px;
$maxWidth: 1400px;
$footer_height: 140px;
$defaultBlack: rgb(51,51,51);
$myred: rgb(200,100,100);
$muted: rgb(153, 153, 153);
$warningColor: rgb(185, 74, 72);

@mixin transition($duration: 2s) {
	-webkit-transition: all #{$duration} ease-in-out;
	-moz-transition: all #{$duration} ease-in-out;
	-o-transition: all #{$duration} ease-in-out;
	transition: all #{$duration} ease-in-out;
}

@mixin carvedText {
	text-shadow: 1px 1px 1px #fff;
}

@mixin font_openSans {
	font-family: 'Open Sans', sans-serif;
}
@mixin font_inder {
	font-family: 'Inder', 'Open Sans', sans-serif;
}
@mixin font_breeSerif {
	font-family: 'Bree Serif', 'Inder', 'Open Sans', sans-serif;  
}

/* Import font from Google Fonts API */
@import url("http://fonts.googleapis.com/css?family=Inder&subset=latin,latin-ext");
