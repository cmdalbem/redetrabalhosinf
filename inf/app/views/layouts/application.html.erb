<!DOCTYPE html>
<html>
<body>

<head>
	<title>infHUB</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= analytics_init if Rails.env.production? %>
</head>

<div id="wrap">
	<div id="main">

		<header class="navbar navbar-fixed-top ">
		  <div class="navbar-inner">
		    <div class="container">
		      <nav>
		        <%= link_to tag(:img, :src => "/assets/logo_txt_mini.png"), root_path, class: "brand"%>
		        <!-- <text class="muted">A rede de compartilhamento de trabalhos do INF</text> -->
		        <ul class="nav pull-right">
		          <%= nav_link nav_icon("InÃ­cio","icon-home icon-large"), root_path %>
		          <%= nav_link nav_icon("Explorar","icon-globe icon-large"), projects_path %>
		          <%= nav_link nav_icon("Pessoas","icon-group icon-large"), people_path %>
		          <li class="divider-vertical"></li>
		          <li>
		            <% if user_signed_in? %>
		              <div class="btn-group"> %>
		                <%= link_to tag(:img, :src => current_user.person.avatar.url(:thumb)) + " " + current_user.person.getFirstName, profile_path(current_user.person.nick), class: "btn"%>
		                  <button class="btn dropdown-toggle" data-toggle="dropdown">
		                  <span class="caret"></span>
		                </button>
		                <ul class="dropdown-menu">
							<!-- List of user options -->
							<li><%= link_to nav_icon("Novo Projeto","icon-plus"), new_project_path %></li>
							<li><%= link_to nav_icon("Editar Perfil", "icon-edit"), edit_person_path(current_user.person) %></li>
							<li class="divider"></li>
							<li><%= link_to nav_icon("Sair","icon-signout"), destroy_user_session_path, :method => :delete %></li>
		                </ul>
		              </div>
		            <% else %>
		              <%= link_to "Entrar", new_user_session_path %>
		            <% end %>
		          </li>
		        </ul>
		      </nav>
		    </div>
		  </div>
		</header>

		<!-- Page content goes here -->
		<div class="container">
			<!-- Flash messages -->
			<% if notice %>
			  <div class="alert alert-success"><%= raw(notice) %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
			<% end %>
			<% if alert %>
			  <div class="alert alert-error"><%= raw(alert) %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
			<% end %>

			<%= yield %>

		</div>

	</div>
</div>

<!-- Footer -->
<footer>
  <section class="container-fluid">

    <div class="row-fluid muted">
        <div class="offset9 span3">
			<header>
				<!-- inf<strong>HUB</strong> -->
		    	<center>
			    	<img src="/assets/logo_small.png">
					<br>
					<%= link_to nav_icon("Github","icon-github"), "https://github.com/cmdalbem/redetrabalhosinf" %>
				</center>
			</header>
        </div>
    </div>

  </div>
</footer>

</body>

</html>
