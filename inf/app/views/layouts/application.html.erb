<!DOCTYPE html>
<html>

<head>
	<%= title site: "infHUB" %>

	<%= metamagic [:property => "og:image", :content => "http://infhub.herokuapp.com/assets/logo.png"], [:property => "og:site_name", :content => "infHUB"], description: "A rede social de compartilhamento de trabalhos do INF.", keywords: %w(inf ufrgs social network projects trabalhos disciplinas cadeiras rede social compartilhamento arquivos downloads ciencia da computação cic engenharia da computação ecp) %>

	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>

	<!-- Google Analytics -->
	<%= analytics_init if Rails.env.production? %>
</head>

<body>

<div id="wrap">
	<div id="main">

		<header class="navbar navbar-fixed-top ">
		  <div class="navbar-inner">
			<div class="container">
			  <nav>
				<%= link_to tag(:img, :src => "/assets/logo_txt_mini.png"), root_path, class: "brand"%>
				<!-- <text class="muted">A rede de compartilhamento de trabalhos do INF</text> -->
				<ul class="nav">
					<%= nav_link nav_icon("Início",""), root_path, false %>
					<%= nav_link nav_icon("Projetos",""), projects_path %>
					<%= nav_link nav_icon("Usuários",""), people_path %>
				</ul>				

				<!-- Search Form -->
				<div class="mysearch navbar-search">
					<%= form_tag projects_path, method: 'get', class: "form-search", style: "margin: 0;" do %>
						<%= hidden_field_tag :direction, params[:direction] %>
						<%= hidden_field_tag :sort, params[:sort] %>
						<%= hidden_field_tag :view, params[:view] %>
						<%= hidden_field_tag :course, params[:course] %>
						<i class="icon-search"></i>
						<%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Buscar projetos" %>
					<% end %>
				</div>
				
				<ul class="nav pull-right">
					<!-- <li class="divider-vertical"></li> -->
					
					<% if user_signed_in? %>
						<li class="small"><%= link_to nav_icon("Novo Projeto","icon-plus"), new_project_path %></small></li>
					<% end %>

					<li>
					<% if user_signed_in? %>
					  <div class="btn-group"> %>
						<%= link_to tag(:img, :src => current_user.person.avatar.url(:thumb)) + " " + current_user.person.getFirstName, profile_path(current_user.person.nick), class: "btn", style: "max-width: 200px; overflow: hidden;"%>
						  <button class="btn dropdown-toggle" data-toggle="dropdown">
						  <span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<!-- List of user options -->
							<% if current_user.admin %>
								<small>Administração</small>
								<li><%= link_to nav_icon("Disciplinas", "icon-wrench"), courses_path %></li>
								<li><%= link_to nav_icon("Tags", "icon-wrench"), tags_path %></li>
								<li><%= link_to nav_icon("Atividades", "icon-wrench"), activities_path %></li>
								<li class="divider"></li>
							<% end %>
							<li><%= link_to nav_icon("Editar Perfil", "icon-edit"), edit_person_path(current_user.person) %></li>
							<li><%= link_to nav_icon("Sair","icon-signout"), destroy_user_session_path, :method => :delete %></li>
						</ul>
					  </div>
					<% else %>
					  <%= link_to "Entrar", new_user_session_path %>
					<% end %>
					</li>

					<!--<% if user_signed_in? %>
					 	<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<i class="icon-globe"></i>
							</a>
							<ul class="dropdown-menu">
								linha de texto<br>
								linha de texto<br>
								linha de texto<br>
								linha de texto<br>
							</ul>
						</li>
					<% end %> -->
				</ul>
			  </nav>
			</div>
		  </div>
		</header>

		<!-- Page content goes here -->
		<div class="container">
			<!-- Flash messages -->
			<% if notice %>
			  <div class="alert alert-success"><%= raw(notice) %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
			<% end %>
			<% if alert %>
			  <div class="alert alert-error"><%= raw(alert) %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
			<% end %>

			<%= yield %>

		</div>

	</div>
</div>

<!-- Footer -->
<footer>
  <section class="container-fluid">

	<div class="row-fluid">
		<center>
			<!-- inf<strong>HUB</strong> -->
			<img src="/assets/logo_carved.png">
			<br>
			<%= link_to nav_icon("Sobre","icon-info-sign"), about_path, class: "no-decoration" %> | 
			<%= link_to nav_icon("Github","icon-github-alt"), "https://github.com/cmdalbem/redetrabalhosinf", class: "no-decoration" %>
		</center>
	</div>

  </section>
</footer>

</body>

</html>
