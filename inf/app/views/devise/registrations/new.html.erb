<h2>Sign up</h2>


<%= form_for([resource, resource.with_person], :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.fields_for :person do |person_builder| %>
    <div class="field">
      <%= person_builder.label :name %><br />
      <%= person_builder.text_field :name %>

      <div class="input-prepend">
        <span class="add-on">redesocialdainf/</span><%= person_builder.text_field :nick %>
      </div>

    </div>
  <% end %>

  <div><%= f.label "Email da INF" %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <br>

  <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
