<div class="btn-group">
  <% thisClass = "" %>
  <% if @viewMode == :list %>
    <% thisClass += "active" %>
  <% end %>
  <%= link_to raw("<i class=\"icon-reorder\"></i>"), params.merge(view: "list", onlyimages: false), title: "Ver em LISTA", id: "list-view", class: "btn " + thisClass %>
  
  <% thisClass = "" %>
  <% if @viewMode == :thumbs %>
    <% thisClass += "active" %>
  <% end %>
  <%= link_to raw("<i class=\"icon-th\"></i>"), params.merge(view: "thumbs", onlyimages: false), title: "Ver em MINIATURAS", id: "thumbs-view", class: "btn " + thisClass %>
</div>

