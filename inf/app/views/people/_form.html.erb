<%= form_for(@person) do |f| %>

  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="input-append">
    <%= f.label "Email da INF" %><br />
    <%= f.text_field :email %><span class="add-on">@inf.ufrgs.br</span>
  </div>

  <%= f.fields_for :user do |builder| %>
    <div><%= builder.label "Email for confirmation" %><br />
    <%= builder.email_field :email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit class: "btn"%>
  </div>
<% end %>