<%= form_for(@person) do |f| %>

  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Person Form -->
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div><%= f.label "About Me" %><br />
  <%= f.text_area :about %></div>
  
  <div><%= f.label "Personal Link" %><br />
  <%= f.url_field :personal_link %></div>
  
  <div><%= f.label "Barra" %><br />
  <input type="number" name="barra1" maxlength="4" value=<%=@barra[0]%> class="input-small"> / <input type="number" name="barra2" maxlength="1" value=<%=@barra[1]%> class="input-small">
  <span class="help-block">Tua barra é formada pelo ano em que tu entrou na UFRGS "barra" ('/') o semestre em que tu começou a cursar.</span>

  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>