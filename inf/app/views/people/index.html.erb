<h1>People</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.getEmail %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Details', person, class: "btn btn-mini" %>
        <%= link_to 'Edit', edit_person_path(person), class: "btn btn-mini" %>
        <%= link_to 'Delete', person, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini" %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />

<a href=<%=new_person_path%> class="btn">
  <i class="icon-plus"></i> Add Person
</a>