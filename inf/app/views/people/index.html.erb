<h1>People</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Projects</th>
    <th colspan="3"></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.getEmail %></td>
    <td><%= person.projects.size %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Details', person, class: "btn btn-mini" %>
        <% if user_signed_in? and current_user.person==person %>
          <%= link_to 'Edit', edit_person_path(person), class: "btn btn-mini" %>
          <%= link_to 'Delete', person, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini" %>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />