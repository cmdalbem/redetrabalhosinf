<h1>Pessoas</h1>

<br>

<div class="content">

<!-- Search Form --> 
<center>
  <%= form_tag people_path, :method => 'get', remote: true, class: "form-search" do %>
      <div class="field">
        <div class="input-append row-fluid">
          <%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Busca por nome ou nick" %>
          <%= submit_tag "Pesquisar", class: "btn", name: nil %>
        </div>
      </div>
  <% end %>
</center>


<!-- People listing -->

<!-- Button group for choosing view (list or thumbnail) -->
<div class="pull-right btn-toolbar">
  <div class="btn-group">
    <% thisClass = "btn" %>
    <% if @viewMode == :list %>
      <% thisClass += " active" %>
    <% end %>
    <%= link_to raw("<i class=\"icon-list\"></i> Lista"), {:view => "list"}, class: thisClass, remote: true, id: "list-view-button" %>
    
    <% thisClass = "btn" %>
    <% if @viewMode == :thumbs %>
      <% thisClass += " active" %>
    <% end %>
    <%= link_to raw("<i class=\"icon-th\"></i> Miniaturas"), {:view => "thumbs"}, class: thisClass, remote: true, id: "thumbs-view-button" %>
  </div>
</div>

<!-- The listing itself -->
<div id="people-list" class="clearfix"> 
  <% if @viewMode == :thumbs %>
    <%= render 'people_thumbs' %>
  <% else %>
    <%= render 'people_list' %>
  <% end %>
</div>


</div>