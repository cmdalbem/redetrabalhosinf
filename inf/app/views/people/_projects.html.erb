<div class="accordion" id="accordion">
  
  <div class="accordion-group">
    <% collapseNum=0 %>
    <% @person.projects.each do |project| %>

      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%=collapseNum%>">
          Título: <%= project.title %>
        </a>
      </div>
      <div id="collapse<%=collapseNum%>" class="accordion-body collapse">
        <div class="accordion-inner">
          <p>
            <b>Disciplina:</b>
            <%= project.course.name %>
          </p>
          <p>
            <b>Descrição:</b>
            <%= project.description %>
          </p>
          <p>
            <b>Semestre:</b>
            <%= project.barra %>
          </p>
        </div>
      </div>

      <% collapseNum+=1 %>
    <% end %>

  </div>

</div>