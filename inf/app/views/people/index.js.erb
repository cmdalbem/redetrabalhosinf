// Dynamic redrawing for remote methods
$("div#people-table").html("<%= escape_javascript(render (@viewMode == :thumbs ? 'people_thumbs' : 'people_list'))%>");
<% if @viewMode == :thumbs %>
	$("#thumbs-view").addClass('active');
	$("#list-view").removeClass('active');
<% else %>
	$("#thumbs-view").removeClass('active');
	$("#list-view").addClass('active');
<% end %>