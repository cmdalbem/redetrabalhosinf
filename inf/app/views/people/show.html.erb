<legend>Detalhes de Perfil
  <!-- <div class="pull-right"> -->
    <% if user_signed_in? and @person.user.authorizes?(current_user) %>
      <%= link_to raw("<i class=\"icon-pencil\"></i> Editar"), edit_person_path(@person), class: "btn btn-info" %>
    <% end %>
  <!-- </div> -->
</legend>

<div class="content">

<div class="container-fluid center">

  <div class="row-fluid">
    <div class="span4">

      <div class="row-fluid">
        <div class="profile-picture">
          <center>
            <%= image_tag @person.avatar, class: "img-polaroid" %>
          </center>
        
          <h2 class="username-text"><%= @person.name %> <small>(<%=@person.nick%>)</small></h2>
          
          <p>
            <%= @person.about %>
          </p>

          <% if @person.personal_link? %>
            <p>
              <i class="icon-share-alt"></i> 
              <%= link_to @person.personal_link, @person.personal_link %>
            </p>
          <% end %>
          
          <% if @person.semester? %>
            <p>
              <strong>Semestre:</strong> <%= @person.semester %>
            </p>
          <% end %>

        </div>
      </div>

      <hr>

      <div class="row-fluid">
        <div class="span12">
          <div class="person-stats">
            <div class="span4">
              <center>
                <strong><%= @person.projects.size %></strong>
                <span>Projetos</span>
              </center>
            </div>
            
            <div class="span4">
              <center>
                <strong><%= @person.getTotalLikes %></strong>
                <span>Projetos curtidos</span>
              </center>
            </div>

            <div class="span4">
              <center>
                <strong><%= @person.getTotalDownloads %></strong>
                <span>Downloads</span>
              </center>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row-fluid">
        <p>
          <span class="muted"><i class="icon-envelope"></i></span>
          <%= mail_to @person.user.email %>
          <br>  
          <span class="muted"><i class="icon-time"></i> Usu√°rio desde</span>
          <%= @person.user.created_at %>
        </p>
      </div>

    </div>

    <div class="span8">
       <%= render 'projects_accordion' %>
    </div>    

  </div>

</div>

</div>