<div class="center hero-unit">
	
    <div class="span3">
    	<img src="/assets/logo.png">
    </div>

	<h1>infHUB</h1>
	<p>
		A rede de compartilhamento de trabalhos dos alunos do Instituto de Informática da UFRGS. <!--<img src="/assets/inf.png">-->
		<br>
		<%= link_to "Leia mais...", about_path %>
	</p>

	<center>
		<!-- Search Form -->
		<%= form_tag projects_path, method: 'get', class: "form-search" do %>
		    <div class="field">
		      <div class="input-append row-fluid big-input">
		        <%= text_field_tag :search, params[:search], class: "search-query input-xxlarge", placeholder: "Buscar projeto por título ou descrição" %>
		        <%= submit_tag "Pesquisar", class: "btn btn-info", name: nil %>
		      </div>
		    </div>
		<% end %>
	</center>
</div>

<center>

	<h4>...ou selecione uma disciplina:</h4>
	<br>

	<% columns = 3 %>
	<div class="row-fluid">
		<ul class="unstyled">
			<% i=0 %>
			<% Course.all.each do |c| %>
				<% if i!=0 and i%columns == 0 %>
					</div>
				<% end %>

				<% if i%columns == 0 %>
					<div class="row-fluid">
				<% end %>
				
				<li class=<%="span#{12/columns}"%>><%=link_to c.name, "#"%></li>

				<% i = i+1 %>
			<% end %>
		</ul>
	</div>

	<!-- <%= link_to raw("Comece já!"), (user_signed_in? ? projects_path : new_user_session_path), class: "btn btn-info btn-large" %> -->

</center>