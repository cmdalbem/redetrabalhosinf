<div class="row-fluid">

  <ul class="thumbnails">
    <% @projects.each do |project| %>

      <div class="pull-left"%>
        <li class="thumbnail project-thumb project-options-trigger">

          <!-- Buttons -->
          <% if user_signed_in? and project.person.user.authorizes?(current_user) %>
            <div class="thumb-buttons">
              <div class="btn-group project-hidden-options">
                <% btnColor = (current_user.admin? and current_user!=project.person.user) ? " btn-danger" : " btn-info" %>
                <%= link_to nav_icon('',"icon-edit"), edit_project_path(project), class: "btn btn-mini"+btnColor %>
                <%= link_to nav_icon('',"icon-trash"), project, confirm: 'Tem certeza?', method: :delete, class: "btn btn-mini"+btnColor %>
              </div>
            </div>
          <% end %>

          <!-- Image in the background -->
          <% if project.image? %>
            <%= image_tag project.image %>
          <% end %>

          <!-- The content -->
          <div class="thumb-content">
            <header>
              <center>
                <%= link_to_project project %>
              </center>
            </header>
            <% aux = project.image? ? "hidable" : "" %>
            <div class="text" id=<%=aux%> >
              <i class="icon-user muted"></i> <%= link_to project.person.nick, profile_path(project.person.nick) %>
              <br>
              <i class="icon-book muted"></i> <%= "#{project.course.name} (#{project.semester})"%>
            </div>
          </div>
 
          <center>
            <div class="icons">
              <% hasAny = false %>

              <% if project.likes.count!=0 %>
                <i class="icon-thumbs-up"></i><%= project.likes.count %>
                <% hasAny = true %>
              <% end %>

              <% if project.downloadCount+project.linkHitCount!=0 %>
                <% if hasAny %>
                  <span class="muted">|</span>
                <% else %>
                  <% hasAny = true %>
                <% end %>
                <i class="icon-download"></i><%= project.downloadCount+project.linkHitCount %>
              <% end %>

              <% if project.comments.count!=0 %>
                <% if hasAny %>
                  <span class="muted">|</span>
                <% else %>
                  <% hasAny = true %>
                <% end %>
                <i class="icon-comments"></i><%= project.comments.count %>
              <% end %>

              <% if project.viewCount!=0 %>
                <% if hasAny %>
                  <span class="muted">|</span>
                <% else %>
                  <% hasAny = true %>
                <% end %>
                <i class="icon-eye-open"></i><%= project.viewCount %>
              <% end %>
            </div>
          </center>

        </li>
      </div>


    <% end %>
  </ul>

</div>