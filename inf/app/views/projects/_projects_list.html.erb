<center>
  <div class="muted">
    <%if params[:search] and not params[:search].empty?%>
        Mostrando resultados para: <strong><%=params[:search]%></strong> <%= link_to raw("<i class=\"icon-remove\"></i>") %>
    <% end %>
  </div

  <div class="muted">
    <%if params[:course] %>
        Mostrando projetos da disciplina: <strong><%=@course.name%></strong> <%= link_to raw("<i class=\"icon-remove\"></i>") %>
    <% end %>
  </div>
</center>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= sortable "TÃ­tulo", "title" %></th>
      <th><%= sortable "Disciplina", "course" %></th>
      <th><%= sortable "Semestre", "barra" %></th>
      <th><%= sortable "Autor", "person" %></th>
      <th><%= sortable "Popularidade", "relevance" %></th>
      <th colspan="1"></th>
    </tr>
  </thead>


  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td tyle="">
          <%= link_to project.title, project %>
          <% if project.file? %>
            <i class="icon-file muted"></i>
          <% end %>
          <% if project.image? %>
            <i class="icon-picture muted"></i>
          <% end %>        
        </td>
        <td style="width: 22%"><small><%= project.course.name %></small></td>
        <td style="width: 10%"><%= project.semester %></td>
        <td style="width: 10%"><%= link_to project.person.nick, profile_path(project.person.nick) %></td>
        <!-- <td style="width: 3%"> <span id="project-like-count-<%= project.id %>"><%= project.likes.count %></span>  </td> -->
        <!-- <td style="width: 3%"><%= project.downloadCount %></td> -->
        <td style="width: 112px"><%= project.relevance %></td>
        <td style="width: 120px">
          <!-- <%= link_to raw("<i class=\"icon-zoom-in\"></i>"), project, class: "btn" %> -->
          <% if user_signed_in? %>
            <% if current_user.person==project.person %>
              <small>
                <%= link_to raw("<i class=\"icon-pencil\"></i> Editar"), edit_project_path(project) %>
                 | 
                <%= link_to raw("<i class=\"icon-trash\"></i> Deletar"), project, confirm: 'Tem certeza?', method: :delete %>
              </small>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>