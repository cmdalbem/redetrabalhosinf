<h1>Projects</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Course</th>
    <th>Owner</th>
    <th colspan="3"></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.course.name %></td>
    <td><%= link_to project.person.name, project.person %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Details', project, class: "btn btn-mini" %>
        <% if user_signed_in? and current_user.person==project.person %>
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-mini" %>
          <%= link_to 'Delete', project, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini" %>
        <% end %>
        <%= link_to 'Like', :controller => "projects", :action => "like" %>
              #:update => { :success => "project", :failure => "error" },
              #class: "btn btn-mini" %>
      </div>
    </td>

  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
  <a href=<%=new_project_path%> >
    <button class="btn btn-success"><i class="icon-plus"></i> Add Project</button>
  </a>
<% end %>
