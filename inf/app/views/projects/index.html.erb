<h1>Projetos</h1>

<br>

<table class="table table-striped table-hover">
  <tr>
    <th>Likes</th>
    <th>TÃ­tulo</th>
    <th>Curso</th>
    <th>Dono</th>
    <th colspan="3"></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><span id="project-like-count-<%= project.id %>"><%= project.likes.count %></span></td>
    <td><%= project.title %></td>
    <td><%= project.course.name %></td>
    <td><%= link_to project.person.name, profile_path(project.person.nick) %></td>
    <td>
      <div class="btn-group">
        <%= link_to raw("<i class=\"icon-zoom-in\"></i> Detalhes"), project, class: "btn btn-mini" %>
        <% if user_signed_in? %>
          <% if current_user.person==project.person %>
            <%= link_to raw("<i class=\"icon-pencil\"></i> Editar"), edit_project_path(project), class: "btn btn-mini" %>
            <%= link_to raw("<i class=\"icon-trash\"></i> Deletar"), project, confirm: 'Tem certeza?', method: :delete, class: "btn btn-mini" %>
          <% end %>
          <%= link_to raw("<i class=\"icon-thumbs-up\"></i> Curtir"), like_project_path(project), remote: true, class: "btn btn-mini" %>
        <% end %>
      </div>
    </td>

  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to raw("<i class=\"icon-plus\"></i> Novo Projeto"), new_project_path, class: "btn btn-success" %>
<% end %>
