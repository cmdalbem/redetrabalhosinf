<h1>Listing projects</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.description %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Show', project, class: "btn btn-mini" %>
        <%= link_to 'Edit', edit_project_path(project), class: "btn btn-mini" %>
        <%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini" %>
      </div>
    </td>

  </tr>
<% end %>
</table>

<br />

<a href=<%=new_project_path%> class="btn">
  <i class="icon-plus"></i> New Project
</a>