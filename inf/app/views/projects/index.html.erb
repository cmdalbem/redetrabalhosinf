<h1>Projetos</h1>

<br>

<div class="content">

<!-- Search Form --> 
<center>
  <%= form_tag projects_path, method: 'get', remote: true, class: "form-search" do %>
      <div class="field">
        <div class="input-append row-fluid">
          <%= text_field_tag :search, params[:search], class: "search-query input-xlarge", placeholder: "Busca por título ou descrição" %>
          <%= submit_tag "Pesquisar", class: "btn", name: nil %>
        </div>
      </div>
  <% end %>
</center>

<!-- Projects list -->

<!-- Button group for choosing view (list or thumbnail) -->
<div class="pull-right btn-toolbar">
  <div class="btn-group">
    <% thisClass = "btn" %>
    <% if @viewMode == :list %>
      <% thisClass += " active" %>
    <% end %>
    <%= link_to raw("<i class=\"icon-list\"></i> Lista"), {:view => "list"}, class: thisClass, id: "list-view",remote: true %>
    
    <% thisClass = "btn" %>
    <% if @viewMode == :thumbs %>
      <% thisClass += " active" %>
    <% end %>
    <%= link_to raw("<i class=\"icon-th\"></i> Miniaturas"), {:view => "thumbs"}, class: thisClass, id: "thumbs-view", remote: true %>
  </div>
</div>

<!-- The listing itself -->
<div id="projects-list" class="clearfix"> 
  <% if @viewMode == :thumbs %>
    <%= render 'projects_thumbs' %>
  <% else %>
    <%= render 'projects_list' %>
  <% end %>
</div>

</div>

<% if user_signed_in? %>
  <center>
    <%= link_to raw("<i class=\"icon-plus\"></i> Novo Projeto"), new_project_path, class: "btn btn-success btn-large" %>
  </center>
<% end %>
