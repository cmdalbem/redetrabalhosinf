<div class="content">

	<h1>Tags</h1>

	<center>
		<%= link_to raw("<i class=\"icon-plus\"></i> Criar Tag"), new_tag_path, class: "btn" %>

		<br>
		<br>

		<table class="table table-striped table-condensed", style="width: 650px;">
			<thead>
				<tr>
					<th>Tag</th>
					<th>Trabalhos</th>
					<th></th>
				</tr>
			</thead>

		<% @tags.each do |tag| %>
			<tr class="project-options-trigger">
				<td>
					<%= tag.tag_text %>
				</td>
				
				<td><%= tag.projects.count %></td>

				<td>
					<div class="pull-right project-hidden-options">
						<%= link_to raw("<i class=\"icon-pencil\"></i>"), edit_tag_path(tag) %>
						<%= link_to raw("<i class=\"icon-trash\"></i>"), tag, confirm: 'o rly?', method: :delete %>
					</div>
				</td>
			</tr>
		<% end %>
		</table>

		<br />

		<%= link_to raw("<i class=\"icon-plus\"></i> Criar Tag"), new_tag_path, class: "btn" %>

	</center>

</div>