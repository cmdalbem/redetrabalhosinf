<h1>Tags</h1>

<div class="content">

<center>
  <%= link_to raw("<i class=\"icon-plus\"></i> Adicionar Tag"), new_tag_path, class: "btn" %>

  <br>
  <br>

  <table class="table table-striped table-condensed", style="width: 650px;">
    <thead>
      <tr>
        <th>Tag</th>
        <th>Projetos</th>
        <th colspan="1"></th>
      </tr>
    </thead>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.tag_text %></td>
      <td><%= tag.projects.count %></td>
      <td>
        <%= link_to 'Edit', edit_tag_path(tag) %>
        <%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to raw("<i class=\"icon-plus\"></i> Adicionar Tag"), new_tag_path, class: "btn" %>

</center>

</div>