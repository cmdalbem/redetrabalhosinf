<h1>Tags</h1>

<div class="content">

<center>
  <%= link_to raw("<i class=\"icon-plus\"></i> Criar Tag"), new_tag_path, class: "btn" %>

  <br>
  <br>

  <table class="table table-striped table-condensed", style="width: 650px;">
    <thead>
      <tr>
        <th>Tag</th>
        <th>Projetos</th>
      </tr>
    </thead>

  <% @tags.each do |tag| %>
    <tr>
      <td class="project-options-trigger">
        <%= tag.tag_text %>
        <div class="btn-group project-hidden-options">
          <a class="btn btn-mini dropdown-toggle"  data-toggle="dropdown" href="#">
            <i class="icon-cog"></i>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu pull-right">
            <li> <%= link_to raw("<i class=\"icon-edit\"></i> Editar"), edit_tag_path(tag), class: "small" %> </li>
            <li> <%= link_to raw("<i class=\"icon-trash\"></i> Excluir"), tag, confirm: 'o rly?', method: :delete, class: "small" %> </li>
          </ul>
        </div>
      </td>
      <td><%= tag.projects.count %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to raw("<i class=\"icon-plus\"></i> Criar Tag"), new_tag_path, class: "btn" %>

</center>

</div>