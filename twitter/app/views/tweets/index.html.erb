<h1>Tweets</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Tweet</th>
    <th>Person</th>
    <th>Comments</th>
    <th colspan="1"></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.text %></td>
    <td><%= tweet.person.name %></td>
    <td><%= tweet.comments.size %></td>
    <td>
        <div class="btn-group">
          <%= link_to 'View', tweet, class: "btn btn-mini" %>
          <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-mini" %>
        </div>
    </td>
  </tr>
<% end %>
</table>

<a href=<%=new_tweet_path%> class="btn">
  <i class="icon-plus"></i> New Tweet
</a>