<h1>People</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Person</th>
    <th>Tweets</th>
    <th>Comments</th>
  </tr>

<% @people.each do |p| %>
  <tr>
    <td><%= p.name %></td>
    <td><%= p.tweets.size %></td>
    <td><%= p.comments.size %></td>
  </tr>
<% end %>
</table>

<a href=<%=new_person_path%> class="btn">
  <i class="icon-plus"></i>
  New Person
</a>