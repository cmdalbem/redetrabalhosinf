<table class="table table-striped table-condensed" >
	<thead>
		<tr>
			<th colspan="2">Top Twitters</th>
		</tr>
	</thead>

	<tbody>
		<% @toptwitters.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.tweets.size %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br />

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th colspan="2">Top Commenters</th>
		</tr>
	</thead>		

	<tbody>
		<% @topcommenters.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.comments.size %></td>
			</tr>	
		<% end %>
	</tbody>
</table>